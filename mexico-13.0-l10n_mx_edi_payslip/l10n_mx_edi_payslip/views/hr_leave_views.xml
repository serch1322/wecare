<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_leave_view_form_l10n_mx_edi_payslip" model="ir.ui.view">
        <field name="name">hr.leave.view.form.l10n_mx_edi_payslip</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="l10n_mx_edi_payslip_no_enjoy_days"
                    attrs="{'invisible': [('holiday_status_id', '!=', %(l10n_mx_edi_payslip.mexican_holiday)d)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
