<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_payslip_extra_form" model="ir.ui.view">
        <field name="name">view.payslip.extra.form</field>
        <field name="model">hr.payslip.extra</field>
        <field name="arch" type="xml">
            <form string="Extra">
                <header>
                    <button name="%(action_hr_payslip_assign_extra_employees)d" type="action" string="Get Employees" class="oe_highlight" states="draft"/>
                    <button string="Approve" name="action_approve" type="object" states="draft" class="oe_highlight"/>
                    <button string="Cancel" name="action_cancel" type="object" states="approved" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet string="Extra">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="input_id"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <field name="detail_ids">
                        <tree editable="bottom">
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="detail"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_payslip_extra_tree" model="ir.ui.view">
        <field name="name">view.payslip.extra.tree</field>
        <field name="model">hr.payslip.extra</field>
        <field name="arch" type="xml">
            <tree string="Extra">
                <field name="name"/>
                <field name="date"/>
                <field name="input_id"/>
                <field name="state"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    <record id="hr_payslip_extra_filter" model="ir.ui.view">
        <field name="name">hr.payslip.extra.search</field>
        <field name="model">hr.payslip.extra</field>
        <field name="arch" type="xml">
            <search string="Search Payslip Extras">
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" help="Draft Payslip Extras"/>
                <filter string="Done" name="done_filter" domain="[('state', '=', 'approved')]" help="Done Payslip Extras"/>
                <filter string="Date" name="date_filter" date="date" default_period="last_month"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="company_id" groups="base.group_multi_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payslip_extra" model="ir.actions.act_window">
        <field name="name">Extra</field>
        <field name="res_model">hr.payslip.extra</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="grp_payslip_extra" name="Extra" parent="hr_payroll.menu_hr_payroll_configuration"
        sequence="50" action='action_payslip_extra'/>
</odoo>
