<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="act_hr_employee_loan_list" model="ir.actions.act_window">
        <field name="res_model">hr.employee.loan</field>
        <field name="name">Loans</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
    </record>
    <record id="act_hr_employee_alimony_list" model="ir.actions.act_window">
        <field name="res_model">hr.employee.alimony</field>
        <field name="name">Alimony</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
    </record>
    <record model="ir.ui.view" id="view_hr_employee_form_inherit_l10n_mx">
        <field name="name">view.hr.employee.form.inherit.l10n_mx</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='o_work_employee_main']/group[4]" position="after">
                <group string="Payroll CFDI">
                    <field name="ssnid"/>
                    <field name="l10n_mx_edi_contract_regime_type"/>
                    <field name="l10n_mx_edi_is_assimilated"/>
                    <field name="l10n_mx_edi_syndicated"/>
                    <field name="l10n_mx_edi_contract_regime_type"/>
                    <field name="l10n_mx_edi_employer_registration_id" context="{'default_company_id': company_id, 'default_branch_id': address_id}" domain="[('branch_id', 'in', [address_id, False])]"/>
                    <field name="l10n_mx_edi_risk_rank" attrs="{'invisible': [('l10n_mx_edi_employer_registration_id', '!=', False)]}"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='km_home_work']" position="after">
                <field name="l10n_mx_edi_medical_unit"/>
                <field name="l10n_mx_edi_type"/>
            </xpath>
            <div name="button_box" position="inside">
                <button name="%(act_hr_employee_loan_list)d"
                    class="oe_stat_button"
                    icon="fa-money"
                    type="action"
                    groups="hr_payroll.group_hr_payroll_user">
                    <field name="l10n_mx_edi_loan_count" widget="statinfo" string="Loans"/>
                </button>
                <button name="%(act_hr_employee_alimony_list)d"
                    class="oe_stat_button"
                    icon="fa-money"
                    type="action"
                    groups="hr_payroll.group_hr_payroll_user">
                    <field name="l10n_mx_edi_alimony_count" widget="statinfo" string="Alimony"/>
                </button>
            </div>
            <xpath expr="//field[@name='country_of_birth']" position="before">
                <field name="l10n_mx_birth_state_id"/>
            </xpath>
            <xpath expr="//group[@name='departure']" position="inside">
                <field name="departure_date"/>
            </xpath>
        </field>
    </record>
    <record id="view_l10n_mx_loan_form" model="ir.ui.view">
        <field name="name">view.l10n_mx.loan.form</field>
        <field name="model">hr.employee.loan</field>
        <field name="arch" type="xml">
            <form string="Loans">
                <sheet string="Loan">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_get_payslips_view"
                            class="oe_stat_button"
                            icon="fa-bars"
                            type="object"
                            attrs="{'invisible': [('payslips_count', '=', 0)]}">
                            <field name="payslips_count" widget="statinfo" string="Payslips"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="monthly_withhold"/>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/> - <field name="date_to" class="oe_inline"/>
                            </div>
                            <field name="payment_term"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="employee_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="loan_type"/>
                            <field name="number_fonacot" attrs="{'invisible':[('loan_type', '!=', 'fonacot')]}"/>
                            <field name='infonavit_type' attrs="{'invisible':[('loan_type', '!=', 'infonavit')]}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_l10n_mx_loan_tree" model="ir.ui.view">
        <field name="name">view.l10n_mx.loan.tree</field>
        <field name="model">hr.employee.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan">
                <field name="date_to"/>
                <field name="employee_id"/>
                <field name="monthly_withhold"/>
                <field name="payment_term"/>
                <field name="payslips_count"/>
                <field name="loan_type"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    <record id="view_l10n_mx_loan_search" model="ir.ui.view">
        <field name="name">view.l10n_mx.loan.search</field>
        <field name="model">hr.employee.loan</field>
        <field name="arch" type="xml">
            <search string="Loan">
                <field name="employee_id"/>
            </search>
        </field>
    </record>

    <record id="action_l10n_mx_loan_method" model="ir.actions.act_window">
        <field name="name">Loan</field>
        <field name="res_model">hr.employee.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="l10n_mx_loan" name="Loans" parent="hr.menu_human_resources_configuration" sequence="50"
        action='action_l10n_mx_loan_method'
    />

    <record id="view_employer_registration_form" model="ir.ui.view">
        <field name="name">view.employer.registration.form</field>
        <field name="model">l10n_mx_edi.employer.registration</field>
        <field name="arch" type="xml">
            <form string="Employer Registration">
                <sheet string="Employer Registration">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="branch_id" domain="[('id', 'child_of', [partner_id])]"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="partner_id" invisible="1"/>
                            <field name="job_risk_id" domain="[('branch_id', '=', branch_id)]"/>
                            <field name="guide"/>
                            <field name="minimum_wage"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_employer_registration_tree" model="ir.ui.view">
        <field name="name">view.employer.registration.tree</field>
        <field name="model">l10n_mx_edi.employer.registration</field>
        <field name="arch" type="xml">
            <tree string="Employer Registration">
                <field name="name"/>
                <field name="job_risk_id"/>
                <field name="branch_id"/>
            </tree>
        </field>
    </record>
    <record id="action_employer_registration" model="ir.actions.act_window">
        <field name="name">Employer Registration</field>
        <field name="res_model">l10n_mx_edi.employer.registration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Alimony -->
    <record id="view_l10n_mx_alimony_form" model="ir.ui.view">
        <field name="name">view.l10n_mx.alimony.form</field>
        <field name="model">hr.employee.alimony</field>
        <field name="arch" type="xml">
            <form string="Alimony">
                <sheet string="Alimony">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="court"/>
                            <field name="number"/>
                            <field name="discount_type"/>
                            <field name="discount_amount"/>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/> - <field name="date_to" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="employee_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="partner_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="payment_method_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="increase_based_on"/>
                            <field name="amount_annual_increase" attrs="{'readonly': [('increase_based_on', '!=', 'annual')], 'required': [('increase_based_on', '=', 'annual')]}"/>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_l10n_mx_alomony_tree" model="ir.ui.view">
        <field name="name">view.l10n_mx.alimony.tree</field>
        <field name="model">hr.employee.alimony</field>
        <field name="arch" type="xml">
            <tree string="Alimony">
                <field name="name"/>
                <field name="court"/>
                <field name="number"/>
                <field name="employee_id"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>
    <record id="action_l10n_mx_employee_alimony" model="ir.actions.act_window">
        <field name="name">Alimony</field>
        <field name="res_model">hr.employee.alimony</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="grp_employer_registration" name="Employer Registration" parent="hr.menu_human_resources_configuration"
        sequence="50" action='action_employer_registration'/>

    <menuitem
        id="l10n_mx_alimony" name="Alimony" parent="hr.menu_human_resources_configuration" sequence="50"
        action="action_l10n_mx_employee_alimony"
    />
</odoo>
